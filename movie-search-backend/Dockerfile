# Multi-stage build for production
FROM maven:3.9.9-eclipse-temurin-17 AS build

WORKDIR /app

# Copy pom.xml first to leverage layer caching (no test deps)
COPY pom.xml .
RUN mvn -B -q -DskipTests -DwithTestcontainers=false dependency:resolve

# Copy source code and build
COPY src ./src
RUN mvn -B -DskipTests -DwithTestcontainers=false clean package

# Production stage
FROM eclipse-temurin:17-jre

WORKDIR /app

# Create non-root user
RUN addgroup --system spring && adduser --system spring --ingroup spring

# Install curl for HEALTHCHECK
RUN apt-get update \
  && apt-get install -y --no-install-recommends curl \
  && rm -rf /var/lib/apt/lists/*

# Copy jar from build stage
COPY --from=build /app/target/*.jar app.jar

# Change ownership
RUN chown spring:spring app.jar

USER spring:spring

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8081/movie/actuator/health || exit 1

EXPOSE 8081

ENTRYPOINT ["java", "-Dspring.profiles.active=docker", "-jar", "app.jar"]
